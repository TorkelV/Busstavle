<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#000">

    <Button
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:id="@+id/btn_blekenberg"
            android:text="Blekenberg"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/busrides_list"
            app:layout_constraintEnd_toEndOf="@+id/busrides_list"
            android:layout_width="wrap_content" app:layout_constraintHorizontal_bias="0"
    />

    <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_blekenberg"
            android:id="@+id/btn_oasen"
            android:text="Oasen"
            android:layout_margin="10dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toTopOf="@+id/busrides_list"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"/>

    <ListView
            android:layout_toEndOf="@+id/btn_blekenberg"
            android:id="@+id/busrides_list"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</android.support.constraint.ConstraintLayout>